{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "title": "Number of participants in the olympics over time",
  "width": 600,
  "height": 425,
  "data": {
    "url": "../dataset/original/Sex-year-season.csv",
    "format": {
      "type": "csv"
    }
  },
  "layer": [{
      "selection": {
        "highlight": {
          "type": "single",
          "on": "mouseover",
          "nearest": "true",
          "fields": ["Season"]
        }
      },
      "mark": "point",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "format": "%Y",
            "labelAngle": 0
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative"
        },
        "color": {
          "field": "Season",
          "type": "nominal"
        }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": null
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative"
        },
        "color": {
          "field": "Season",
          "type": "nominal"
        }
      }
    }
  ],
  "dateTime": {
      "fullTime": "Feb 28 2018",
      "year": "2018",
      "month": "02",
      "date": "28"
  },
  "user": "Varun Sukumar",
  "chartType": "line",
  "description": "The number of participants in the olympics have grown overtime. It is also obvious that the number of participants in the summer olympics are more than that of the winter olympics."
}
